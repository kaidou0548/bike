<%- include('fixo/hearder') %>

<div class="flex flex-col text-center items-center justify-center"> 
    <img src="/images/map.jpg" alt="uf mapa" class="w-150 h-80 rounded-sm py-2"> 

    <div class="flex text-center items-center justify-center mt-4">
        <div class="w-90 p-4 shadow-lg bg-white rounded-md">          

            <% mapa.forEach((mapaInstance, index) => { %>
                <button type="button" class="text-white py-1 px-3 rounded-sm ms-1 <%= mapaInstance.local.cor %>" onclick="window.location.href='/api/bikes/ponto/<%= mapaInstance.local.mapa %>'">
                    <% if (mapaInstance.local.mapa == 'CT') { %> C&T <% } else if (mapaInstance.local.mapa == 'RU_Central') { %> RU Central <% } else { %> <%= mapaInstance.local.mapa %> <% } %>
                </button>
            <% }); %>

            <div class="py-4">
                <div class="flex items-center p-2 justify-start space-x-2"> 
                    <i class="fa-solid fa-square text-blue-500 rounded-sm"></i>
                    <p>Local tem Bike</p>
                </div>
                <div class="flex items-center p-2 justify-start space-x-2"> 
                    <i class="fa-solid fa-square text-red-500 rounded-sm"></i>
                    <p>Local sem Bike</p>
                </div>
                <div class="flex items-center p-2 justify-start space-x-2"> 
                    <i class="fa-solid fa-square text-green-500 rounded-sm"></i>
                    <p>Local cheio de Bike</p>
                </div>

                <% if (mapa[0].alugador === 0) { %>
                    <div class="flex items-center p-2 justify-start space-x-2"> 
                        <i class="fa-solid fa-square text-violet-500 rounded-sm"></i>
                        <p>Sua Bike está aqui</p>
                    </div>
                    <div class="flex items-center p-2 justify-start space-x-2"> 
                        <i class="fa-solid fa-square text-purple-400 rounded-sm"></i>
                        <p>Local cheio de Bike e Sua Bike está aqui</p>
                    </div>
                <% } %>   
            </div>
        </div>       
    </div>
    <div class="mt-2">
        <a type="button" class="bg-red-500 text-white py-1 px-3 rounded-sm inline-block" href="/logout" class="mt-2">Sair</a>                                           
    </div>
</div>

<%- include('fixo/footer') %>

